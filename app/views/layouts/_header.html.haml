
%nav.navbar.transparent
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand.glyphicon.glyphicon-adjust
        = link_to "Teesy", root_path


    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to "Signed in as #{current_user.email.upcase}", edit_user_registration_path
          %li
            = link_to "Sign out", destroy_user_session_path, :method => :delete
          %li
            = link_to "Search", search_index_path
          %li
            = link_to "My distributors", user_user_distributors_path(current_user.id)
          - if current_user.admin?
            %li
              = link_to "Add distributor", new_distributor_path
        - else
          %li
            = link_to "Sign up", new_user_registration_path
          %li
            = link_to "Sign in", new_user_session_path


